{
    "manifest_version": 3,
    "name": "Cryptic Messenger",
    "version": "1.0",
    "description": "Mystery is the key to success.",
    "action": {
        "default_popup": "popup.html",
        "default_icon": {
            "16":"icon/icon16.png",
            "32":"icon/icon32.png",
            "48":"icon/icon48.png",
            "128":"icon/icon128.png"
        }
    },
    "icons": {
        "16": "icon/icon16.png",
        "32": "icon/icon32.png",
        "48": "icon/icon48.png",
        "128": "icon/icon128.png"
    },
    "permissions": [
        "activeTab",
        "scripting",
        "storage"
    ],
    "background": {
        "service_worker": "background.js"
      },
    "content_scripts": [
        {
            "matches": ["https://web.whatsapp.com/*"],
            "js": ["content.js","cypher.js"]
        },
        {
            "matches": ["<all_urls>"],
            "js": ["other.js"]
        }
    ],
    "host_permissions": [
        "https://web.whatsapp.com/*"
    ]
}