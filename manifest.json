{
    "manifest_version": 3,
    "name": "My First Extension",
    "version": "1.0",
    "description": "The first extension that I made.",
    "action": {
        "default_popup": "popup.html",
        "default_icon": {
            "16":"icon/icon16.png",
            "32":"icon/icon32.png",
            "48":"icon/icon48.png",
            "128":"icon/icon128.png"
        }
    },
    "permissions": [
        "activeTab",
        "scripting"
    ],
    "content_scripts": [
        {
            "matches": ["https://web.whatsapp.com/*"],
            "js": ["content.js"]
        }
    ]
}